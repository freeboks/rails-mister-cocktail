<%= button_to "Home", cocktails_path, class: "btn btn-danger", method: "get" %>
<h1><%= @cocktail.name %></h1>
<div>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <%= link_to "delete dose", dose_path(dose), method: "delete" %>
<% end %>
</div>
<%= button_to "add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary", method: "get" %>

